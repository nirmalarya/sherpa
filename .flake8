[flake8]
# Maximum line length
max-line-length = 100

# Exclude directories
exclude =
    .git,
    __pycache__,
    venv,
    venv-312,
    node_modules,
    dist,
    build,
    *.egg-info,
    .pytest_cache,
    sherpa/frontend

# Ignore specific error codes
ignore =
    E203,  # Whitespace before ':'
    E501,  # Line too long (handled by black)
    W503,  # Line break before binary operator
    W504,  # Line break after binary operator

# Maximum complexity
max-complexity = 15

# Show source code for errors
show-source = True

# Count errors
count = True
